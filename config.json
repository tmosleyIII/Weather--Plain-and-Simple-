{
	"platform_version": "v1.2",
	"name": "Weather - Plain and Simple",
	"author": "tmosleyiii@gmail.com",
	"version": "0.2.4",
	"description": "A Weather extension for Google Chrome built using Trigger.io",
	"permissions": ["tabs", "geolocation", "http://www.google.com/*"],
	"background_files": ["js/background.js"],
	"browser_action": {
		"default_title": "Weather - Plain and Simple",
		"default_popup": "index.html",
		"default_icon": "img/sun_19.png"
	},
	"activations": [
		{
			"patterns": ["http://*/*", "https://*/*"],
			"styles": [],
			"scripts": ["js/every-page.js"],
			"run_at": "start",
			"all_frames": false
		}
	],
	"logging": {
			"level": "INFO"
	}
}
